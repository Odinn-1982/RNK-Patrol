<div class="hub">
    {{!-- Left Sidebar Navigation --}}
    <nav class="hub-nav">
        <div class="hub-logo">
            <img src="modules/rnk-patrol/assets/pics/Vespera.png" alt="RNK">
            <span>RNK Patrol</span>
        </div>
        <div class="nav-tabs" data-group="hub-tabs">
            <a class="nav-item active" data-tab="patrols" title="Patrols">
                <i class="fas fa-route"></i>
                <span>Patrols</span>
            </a>
            <a class="nav-item" data-tab="detection" title="Detection">
                <i class="fas fa-eye"></i>
                <span>Detection</span>
            </a>
            <a class="nav-item" data-tab="capture" title="Capture">
                <i class="fas fa-handcuffs"></i>
                <span>Capture</span>
            </a>
            <a class="nav-item" data-tab="jails" title="Jails">
                <i class="fas fa-dungeon"></i>
                <span>Jails</span>
            </a>
            <a class="nav-item" data-tab="telegraph" title="Telegraph">
                <i class="fas fa-broadcast-tower"></i>
                <span>Telegraph</span>
            </a>
            <a class="nav-item" data-tab="barks" title="Barks">
                <i class="fas fa-volume-up"></i>
                <span>Barks</span>
            </a>
            <a class="nav-item" data-tab="ai" title="AI System">
                <i class="fas fa-brain"></i>
                <span>AI</span>
            </a>
            <a class="nav-item" data-tab="activity" title="Activity">
                <i class="fas fa-history"></i>
                <span>Activity</span>
            </a>
            <a class="nav-item" data-tab="settings" title="Settings">
                <i class="fas fa-cog"></i>
                <span>Settings</span>
            </a>
        </div>
        <div class="nav-footer">
            <span class="version">v{{version}}</span>
        </div>
    </nav>

    {{!-- Main Content Area --}}
    <main class="hub-main">
        {{!-- PATROLS TAB --}}
        <section class="tab-panel active" data-tab="patrols" data-group="hub-tabs">
            <div class="panel-split">
                <div class="panel-image">
                    <img src="modules/rnk-patrol/assets/pics/Main.jpg" alt="Patrol Command">
                    <div class="image-overlay">
                        <h2>Patrol Command</h2>
                        <p>Manage your patrol routes and guard assignments</p>
                    </div>
                </div>
                <div class="panel-content">
                    <div class="panel-header">
                        <div class="stats-row">
                            <div class="stat"><span class="val">{{stats.total}}</span><span class="lbl">Total</span></div>
                            <div class="stat active"><span class="val">{{stats.active}}</span><span class="lbl">Active</span></div>
                            <div class="stat paused"><span class="val">{{stats.paused}}</span><span class="lbl">Paused</span></div>
                            <div class="stat alert"><span class="val">{{stats.alert}}</span><span class="lbl">Alert</span></div>
                        </div>
                        <div class="controls-row">
                            <button type="button" data-action="start-all" class="btn success" title="Start All"><i class="fas fa-play"></i></button>
                            <button type="button" data-action="pause-all" class="btn warning" title="Pause All"><i class="fas fa-pause"></i></button>
                            <button type="button" data-action="stop-all" class="btn danger" title="Stop All"><i class="fas fa-stop"></i></button>
                            <button type="button" data-action="create-patrol" class="btn primary" title="New Patrol"><i class="fas fa-plus"></i> New</button>
                        </div>
                    </div>
                    <div class="patrol-list">
                        {{#if hasPatrols}}
                            {{#each patrols}}
                            <div class="patrol-card {{stateClass}} {{#if isAlert}}alert{{/if}}" data-patrol-id="{{id}}">
                                <img src="{{tokenImg}}" class="patrol-avatar" alt="{{tokenName}}">
                                <div class="patrol-info">
                                    <strong>{{name}}</strong>
                                    <small>{{tokenName}} • {{modeLabel}}</small>
                                </div>
                                <div class="patrol-status">
                                    <span class="status-dot"></span>
                                    {{stateLabel}}
                                </div>
                                <div class="patrol-actions">
                                    {{#if isActive}}
                                    <button data-action="pause-patrol" class="btn-sm" title="Pause"><i class="fas fa-pause"></i></button>
                                    {{else}}
                                    <button data-action="start-patrol" class="btn-sm" title="Start"><i class="fas fa-play"></i></button>
                                    {{/if}}
                                    <button data-action="edit-patrol" class="btn-sm" title="Edit"><i class="fas fa-edit"></i></button>
                                    <button data-action="delete-patrol" class="btn-sm danger" title="Delete"><i class="fas fa-trash"></i></button>
                                </div>
                            </div>
                            {{/each}}
                        {{else}}
                            <div class="empty-state">
                                <i class="fas fa-route"></i>
                                <p>No patrols created yet</p>
                                <button type="button" data-action="create-patrol" class="btn primary">Create First Patrol</button>
                            </div>
                        {{/if}}
                    </div>
                </div>
            </div>
        </section>

        {{!-- DETECTION TAB --}}
        <section class="tab-panel" data-tab="detection" data-group="hub-tabs">
            <div class="panel-split">
                <div class="panel-image">
                    <img src="modules/rnk-patrol/assets/pics/2.jpg" alt="Detection System">
                    <div class="image-overlay">
                        <h2>Detection System</h2>
                        <p>Configure how patrols detect players</p>
                    </div>
                </div>
                <div class="panel-content">
                    <div class="settings-form">
                        <div class="form-group">
                            <label><input type="checkbox" name="enableDetection" {{#if enableDetection}}checked{{/if}}> Enable Detection</label>
                        </div>
                        <div class="form-group">
                            <label>Default Detection Range (tiles)</label>
                            <input type="number" name="defaultDetectionRange" value="{{defaultDetectionRange}}" min="1" max="50">
                        </div>
                        <div class="form-group">
                            <label>Detection Trigger</label>
                            <select name="detectionTrigger">
                                <option value="notify" {{#if (eq detectionTrigger "notify")}}selected{{/if}}>Notify GM</option>
                                <option value="alert" {{#if (eq detectionTrigger "alert")}}selected{{/if}}>Alert Mode</option>
                                <option value="combat" {{#if (eq detectionTrigger "combat")}}selected{{/if}}>Start Combat</option>
                                <option value="macro" {{#if (eq detectionTrigger "macro")}}selected{{/if}}>Run Macro</option>
                                <option value="none" {{#if (eq detectionTrigger "none")}}selected{{/if}}>None</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Sight Check Method</label>
                            <select name="sightCheckMethod">
                                <option value="ray" {{#if (eq sightCheckMethod "ray")}}selected{{/if}}>Ray Cast</option>
                                <option value="los" {{#if (eq sightCheckMethod "los")}}selected{{/if}}>Line of Sight</option>
                                <option value="range" {{#if (eq sightCheckMethod "range")}}selected{{/if}}>Range Only</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label><input type="checkbox" name="detectHiddenPlayers" {{#if detectHiddenPlayers}}checked{{/if}}> Detect Hidden Players</label>
                        </div>
                        <div class="form-group">
                            <label><input type="checkbox" name="detectInvisible" {{#if detectInvisible}}checked{{/if}}> Detect Invisible Tokens</label>
                        </div>

                        <h4>Performance</h4>
                        <div class="form-group">
                            <label>Max Active Patrols</label>
                            <input type="number" name="maxActivePatrols" value="{{maxActivePatrols}}" min="1" max="50">
                        </div>
                        <div class="form-group">
                            <label>Update Interval (ms)</label>
                            <input type="number" name="updateInterval" value="{{updateInterval}}" min="100" max="2000" step="100">
                        </div>

                        <div class="form-actions">
                            <button type="button" data-action="save-detection-settings" class="btn primary">Save Changes</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        {{!-- CAPTURE TAB --}}
        <section class="tab-panel" data-tab="capture" data-group="hub-tabs">
            <div class="panel-split">
                <div class="panel-image">
                    <img src="modules/rnk-patrol/assets/pics/final mercy.jpg" alt="Capture System">
                    <div class="image-overlay">
                        <h2>Capture System</h2>
                        <p>Configure how guards handle captured players</p>
                    </div>
                </div>
                <div class="panel-content">
                    <div class="settings-form">
                        <div class="form-group">
                            <label><input type="checkbox" name="captureEnabled" {{#if captureEnabled}}checked{{/if}}> Enable Capture System</label>
                        </div>
                        <div class="form-group">
                            <label>Capture Range (tiles)</label>
                            <input type="number" name="captureRange" value="{{captureRange}}" min="1" max="10">
                        </div>
                        <div class="form-group">
                            <label><input type="checkbox" name="briberyEnabled" {{#if briberyEnabled}}checked{{/if}}> Allow Bribery</label>
                        </div>
                        <div class="form-group">
                            <label>Base Bribe Cost</label>
                            <input type="number" name="briberyBaseCost" value="{{briberyBaseCost}}" min="0">
                        </div>
                        <div class="form-group">
                            <label>Bribery Success Chance (%)</label>
                            <input type="range" name="briberyChance" value="{{briberyChance}}" min="0" max="100">
                            <span class="range-val">{{briberyChance}}%</span>
                        </div>
                        
                        <h4>Outcome Weights</h4>
                        <div class="weight-group">
                            <div class="weight-row">
                                <label>Combat</label>
                                <input type="range" name="weight-combat" value="{{outcomeWeights.combat}}" min="0" max="100">
                                <span class="range-val">{{outcomeWeights.combat}}</span>
                            </div>
                            <div class="weight-row">
                                <label>Theft</label>
                                <input type="range" name="weight-theft" value="{{outcomeWeights.theft}}" min="0" max="100">
                                <span class="range-val">{{outcomeWeights.theft}}</span>
                            </div>
                            <div class="weight-row">
                                <label>Jail</label>
                                <input type="range" name="weight-jail" value="{{outcomeWeights.jail}}" min="0" max="100">
                                <span class="range-val">{{outcomeWeights.jail}}</span>
                            </div>
                            <div class="weight-row">
                                <label>Relocate</label>
                                <input type="range" name="weight-relocate" value="{{outcomeWeights.relocate}}" min="0" max="100">
                                <span class="range-val">{{outcomeWeights.relocate}}</span>
                            </div>
                            <div class="weight-row">
                                <label>Disregard</label>
                                <input type="range" name="weight-disregard" value="{{outcomeWeights.disregard}}" min="0" max="100">
                                <span class="range-val">{{outcomeWeights.disregard}}</span>
                            </div>
                            <div class="weight-total">
                                <span>Total: <span class="total-value">{{outcomeWeightsTotal}}</span>%</span>
                                <button type="button" class="reset-weights" title="Reset to defaults"><i class="fas fa-undo"></i></button>
                            </div>
                        </div>

                        <h4>Bleed-Out Settings</h4>
                        <div class="form-group">
                            <label><input type="checkbox" name="bleedOutEnabled" {{#if bleedOutEnabled}}checked{{/if}}> Enable Bleed-Out Saves</label>
                        </div>
                        <div class="form-group">
                            <label>HP Threshold (%)</label>
                            <input type="range" name="bleedOutThreshold" value="{{bleedOutThreshold}}" min="5" max="50">
                            <span class="range-val">{{bleedOutThreshold}}%</span>
                        </div>
                        <div class="form-group">
                            <label>Base DC</label>
                            <input type="number" name="bleedOutBaseDC" value="{{bleedOutBaseDC}}" min="5" max="25">
                        </div>
                        <div class="form-group">
                            <label>Control</label>
                            <select name="bleedOutPlayerControl">
                                <option value="player" {{#if (eq bleedOutPlayerControl "player")}}selected{{/if}}>Player Choice</option>
                                <option value="gm" {{#if (eq bleedOutPlayerControl "gm")}}selected{{/if}}>GM Only</option>
                                <option value="auto" {{#if (eq bleedOutPlayerControl "auto")}}selected{{/if}}>Automatic</option>
                            </select>
                        </div>

                        <div class="form-actions">
                            <button type="button" data-action="save-capture-settings" class="btn primary">Save Changes</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        {{!-- JAILS TAB --}}
        <section class="tab-panel" data-tab="jails" data-group="hub-tabs">
            <div class="panel-split">
                <div class="panel-image">
                    <img src="modules/rnk-patrol/assets/pics/terminal spiral.jpg" alt="Jail System">
                    <div class="image-overlay">
                        <h2>Jail System</h2>
                        <p>Manage detention facilities and prisoners</p>
                    </div>
                </div>
                <div class="panel-content jail-content-scrollable">
                    <div class="settings-form">
                        <div class="form-group">
                            <label><input type="checkbox" name="jailEnabled" {{#if jailEnabled}}checked{{/if}}> Enable Jail System</label>
                        </div>
                        <div class="form-group">
                            <label>Default Sentence (seconds)</label>
                            <input type="number" name="jailDefaultDuration" value="{{jailDefaultDuration}}" min="10">
                        </div>
                        <div class="form-group">
                            <label><input type="checkbox" name="jailEscapeEnabled" {{#if jailEscapeEnabled}}checked{{/if}}> Allow Escape Attempts</label>
                        </div>
                        <div class="form-group">
                            <label>Escape DC</label>
                            <input type="number" name="jailEscapeDC" value="{{jailEscapeDC}}" min="5" max="30">
                        </div>
                    </div>

                    <h4>Active Jails</h4>
                    <div class="jail-list">
                        {{#if jailScenes.length}}
                            {{#each jailScenes}}
                            <div class="jail-item" data-scene-id="{{sceneId}}" data-config-key="{{configKey}}">
                                <i class="fas fa-dungeon"></i>
                                <div class="jail-info">
                                    <strong>{{sceneName}}</strong>
                                    <small>{{prisonerCount}} prisoners</small>
                                </div>
                                <div class="jail-actions">
                                    <button data-action="edit-jail" data-scene-id="{{sceneId}}" data-config-key="{{configKey}}" class="btn-sm" title="Edit Jail Configuration"><i class="fas fa-cog"></i></button>
                                    <button data-action="visit-jail" data-scene-id="{{sceneId}}" class="btn-sm" title="Visit"><i class="fas fa-eye"></i></button>
                                    <button data-action="reset-jail" data-scene-id="{{sceneId}}" class="btn-sm" title="Reset"><i class="fas fa-redo"></i></button>
                                </div>
                            </div>
                            {{/each}}
                        {{else}}
                            <div class="empty-state small">
                                <p>No jail scenes configured</p>
                            </div>
                        {{/if}}
                    </div>

                    {{!-- JAIL TOKEN CONFIGURATION --}}
                    <h4><i class="fas fa-users"></i> Guard & Inmate Tokens</h4>
                    <p class="section-description">Select actors from compendiums or world actors to use for guards and inmates in jail scenes.</p>
                    
                    <div class="token-config-section">
                        <div class="token-config-group">
                            <label><i class="fas fa-shield-alt"></i> Default Guard Actor</label>
                            <div class="token-selection">
                                {{#if defaultGuardActor}}
                                <div class="selected-actor">
                                    <img src="{{defaultGuardActor.img}}" alt="{{defaultGuardActor.name}}">
                                    <span>{{defaultGuardActor.name}}</span>
                                    <button data-action="clear-default-guard" class="btn-sm danger" title="Clear"><i class="fas fa-times"></i></button>
                                </div>
                                {{else}}
                                <span class="no-selection">No actor selected</span>
                                {{/if}}
                                <button data-action="pick-default-guard-compendium" class="btn-sm" title="Browse Compendiums">
                                    <i class="fas fa-search"></i> Browse Compendiums
                                </button>
                                <button data-action="pick-default-guard-world" class="btn-sm" title="World Actors">
                                    <i class="fas fa-globe"></i> World Actors
                                </button>
                            </div>
                        </div>

                        <div class="token-config-group">
                            <label><i class="fas fa-user-lock"></i> Default Inmate Actor</label>
                            <div class="token-selection">
                                {{#if defaultInmateActor}}
                                <div class="selected-actor">
                                    <img src="{{defaultInmateActor.img}}" alt="{{defaultInmateActor.name}}">
                                    <span>{{defaultInmateActor.name}}</span>
                                    <button data-action="clear-default-inmate" class="btn-sm danger" title="Clear"><i class="fas fa-times"></i></button>
                                </div>
                                {{else}}
                                <span class="no-selection">No actor selected</span>
                                {{/if}}
                                <button data-action="pick-default-inmate-compendium" class="btn-sm" title="Browse Compendiums">
                                    <i class="fas fa-search"></i> Browse Compendiums
                                </button>
                                <button data-action="pick-default-inmate-world" class="btn-sm" title="World Actors">
                                    <i class="fas fa-globe"></i> World Actors
                                </button>
                            </div>
                        </div>
                    </div>

                    <h4>Current Prisoners</h4>
                    <div class="prisoner-list">
                        {{#if prisoners.length}}
                            {{#each prisoners}}
                            <div class="prisoner-item" data-actor-id="{{actorId}}">
                                <img src="{{img}}" class="prisoner-avatar" alt="{{name}}">
                                <div class="prisoner-info">
                                    <strong>{{name}}</strong>
                                    <small>{{jailName}} • {{timeRemaining}}</small>
                                </div>
                                <div class="prisoner-actions">
                                    <button data-action="release-prisoner" data-actor-id="{{actorId}}" class="btn-sm success" title="Release"><i class="fas fa-unlock"></i></button>
                                </div>
                            </div>
                            {{/each}}
                        {{else}}
                            <div class="empty-state small">
                                <p>No prisoners currently detained</p>
                            </div>
                        {{/if}}
                    </div>

                    <div class="form-actions">
                        <button type="button" data-action="save-jail-settings" class="btn primary">Save Changes</button>
                        <button type="button" data-action="create-jail" class="btn">Create Jail Scene</button>
                    </div>
                </div>
            </div>
        </section>

        {{!-- TELEGRAPH TAB --}}
        <section class="tab-panel" data-tab="telegraph" data-group="hub-tabs">
            <div class="panel-split">
                <div class="panel-image">
                    <img src="modules/rnk-patrol/assets/pics/blood rain.jpg" alt="Telegraph System">
                    <div class="image-overlay">
                        <h2>Telegraph System</h2>
                        <p>Visual effects for patrol spawns and alerts</p>
                    </div>
                </div>
                <div class="panel-content">
                    <div class="settings-form">
                        <div class="form-group">
                            <label><input type="checkbox" name="telegraphEnabled" {{#if telegraphEnabled}}checked{{/if}}> Enable Telegraph Effects</label>
                        </div>
                        <div class="form-group">
                            <label>Effect Style</label>
                            <select name="telegraphStyle">
                                <option value="ripple" {{#if (eq telegraphStyle "ripple")}}selected{{/if}}>Ripple</option>
                                <option value="runes" {{#if (eq telegraphStyle "runes")}}selected{{/if}}>Runes</option>
                                <option value="glow" {{#if (eq telegraphStyle "glow")}}selected{{/if}}>Glow</option>
                                <option value="portal" {{#if (eq telegraphStyle "portal")}}selected{{/if}}>Portal</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Duration (ms)</label>
                            <input type="number" name="telegraphDuration" value="{{telegraphDuration}}" min="500" max="5000" step="100">
                        </div>
                        <div class="form-group">
                            <label>Effect Color</label>
                            <input type="color" name="telegraphColor" value="{{telegraphColor}}">
                        </div>
                        <div class="form-group">
                            <label><input type="checkbox" name="telegraphGMOnly" {{#if telegraphGMOnly}}checked{{/if}}> GM Only (Hide from players)</label>
                        </div>
                        <div class="form-actions">
                            <button type="button" data-action="save-telegraph-settings" class="btn primary">Save Changes</button>
                            <button type="button" data-action="test-telegraph" class="btn">Test Effect</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        {{!-- BARKS TAB --}}
        <section class="tab-panel" data-tab="barks" data-group="hub-tabs">
            <div class="panel-split">
                <div class="panel-image">
                    <img src="modules/rnk-patrol/assets/pics/last resort.jpg" alt="Bark System">
                    <div class="image-overlay">
                        <h2>Bark System</h2>
                        <p>Audio cues for patrol events</p>
                    </div>
                </div>
                <div class="panel-content">
                    <div class="settings-form">
                        <div class="form-group">
                            <label><input type="checkbox" name="barksEnabled" {{#if barksEnabled}}checked{{/if}}> Enable Barks</label>
                        </div>
                        <div class="form-group">
                            <label>Volume</label>
                            <input type="range" name="barkVolume" value="{{barkVolume}}" min="0" max="1" step="0.1">
                            <span class="range-val">{{barkVolumePercent}}%</span>
                        </div>
                        <div class="form-group">
                            <label>Cooldown (ms)</label>
                            <input type="number" name="barkCooldown" value="{{barkCooldown}}" min="0" max="10000" step="500">
                        </div>

                        <h4>Custom Bark Paths</h4>
                        {{#each barkCategories}}
                        <div class="form-group bark-path">
                            <label><i class="{{icon}}"></i> {{label}}</label>
                            <input type="text" name="bark-{{key}}" value="{{path}}" placeholder="Path to audio file...">
                            <button type="button" data-action="browse-bark" data-category="{{key}}" class="btn-sm"><i class="fas fa-folder"></i></button>
                        </div>
                        {{/each}}

                        <div class="form-actions">
                            <button type="button" data-action="save-bark-settings" class="btn primary">Save Changes</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        {{!-- AI TAB --}}
        <section class="tab-panel" data-tab="ai" data-group="hub-tabs">
            <div class="panel-split">
                <div class="panel-image">
                    <img src="modules/rnk-patrol/assets/pics/Vespera-red.jpg" alt="AI System">
                    <div class="image-overlay">
                        <h2>AI System</h2>
                        <p>Automation and decision making</p>
                    </div>
                </div>
                <div class="panel-content">
                    <div class="settings-form">
                        <div class="form-group">
                            <label>AI Provider</label>
                            <select name="aiProvider">
                                <option value="none" {{#if (eq aiProvider "none")}}selected{{/if}}>Disabled</option>
                                <option value="system" {{#if (eq aiProvider "system")}}selected{{/if}}>System Heuristics</option>
                                <option value="openai" {{#if (eq aiProvider "openai")}}selected{{/if}}>OpenAI</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label><input type="checkbox" name="automateDecisions" {{#if automateDecisions}}checked{{/if}}> Automate Capture Decisions</label>
                        </div>
                        <div class="form-group">
                            <label><input type="checkbox" name="automateCombat" {{#if automateCombat}}checked{{/if}}> Automate Combat</label>
                        </div>
                        <div class="form-group">
                            <label><input type="checkbox" name="automateRequireApproval" {{#if automateRequireApproval}}checked{{/if}}> Require GM Approval</label>
                        </div>
                        <div class="form-group">
                            <label>Combat Automation Level</label>
                            <select name="combatAutomationLevel">
                                <option value="none" {{#if (eq combatAutomationLevel "none")}}selected{{/if}}>None</option>
                                <option value="assisted" {{#if (eq combatAutomationLevel "assisted")}}selected{{/if}}>Assisted</option>
                                <option value="autoResolve" {{#if (eq combatAutomationLevel "autoResolve")}}selected{{/if}}>Auto Resolve</option>
                            </select>
                        </div>
                    </div>

                    <h4>AI Log</h4>
                    <div class="ai-log">
                        {{#if aiLog.length}}
                            {{#each aiLog}}
                            <div class="log-entry">
                                <span class="log-type">{{this.type}}</span>
                                <span class="log-msg">{{this.message}}</span>
                                {{#if this.undo}}
                                <button data-action="undo-ai-log" data-index="{{@index}}" class="btn-sm"><i class="fas fa-undo"></i></button>
                                {{/if}}
                            </div>
                            {{/each}}
                        {{else}}
                            <div class="empty-state small">
                                <p>No AI activity logged</p>
                            </div>
                        {{/if}}
                    </div>

                    <h4>Pending Actions</h4>
                    <div class="pending-list">
                        {{#if aiPending.length}}
                            {{#each aiPending}}
                            <div class="pending-item">
                                <span class="pending-desc">{{this.description}}</span>
                                <div class="pending-actions">
                                    <button data-action="approve-pending" data-index="{{@index}}" class="btn-sm success"><i class="fas fa-check"></i></button>
                                    <button data-action="reject-pending" data-index="{{@index}}" class="btn-sm danger"><i class="fas fa-times"></i></button>
                                </div>
                            </div>
                            {{/each}}
                        {{else}}
                            <div class="empty-state small">
                                <p>No pending actions</p>
                            </div>
                        {{/if}}
                    </div>

                    <div class="form-actions">
                        <button type="button" data-action="save-ai-settings" class="btn primary">Save Changes</button>
                        <button type="button" data-action="clear-ai-log" class="btn danger">Clear Log</button>
                    </div>
                </div>
            </div>
        </section>

        {{!-- ACTIVITY TAB --}}
        <section class="tab-panel" data-tab="activity" data-group="hub-tabs">
            <div class="panel-split">
                <div class="panel-image">
                    <img src="modules/rnk-patrol/assets/pics/1.jpg" alt="Activity Log">
                    <div class="image-overlay">
                        <h2>Activity Log</h2>
                        <p>Recent patrol events and quick actions</p>
                    </div>
                </div>
                <div class="panel-content">
                    <h4>Quick Patrol (Scene Tokens)</h4>
                    <div class="token-grid">
                        {{#if sceneTokens.length}}
                            {{#each sceneTokens}}
                            <div class="token-item {{#if hasPatrol}}has-patrol{{/if}}" data-token-id="{{id}}">
                                <img src="{{img}}" class="token-avatar" alt="{{name}}">
                                <span class="token-name">{{name}}</span>
                                {{#unless hasPatrol}}
                                <button data-action="quick-patrol" data-token-id="{{id}}" class="btn-sm primary" title="Create Patrol"><i class="fas fa-plus"></i></button>
                                {{/unless}}
                            </div>
                            {{/each}}
                        {{else}}
                            <div class="empty-state small">
                                <p>No tokens on current scene</p>
                            </div>
                        {{/if}}
                    </div>

                    <h4>Recent Activity</h4>
                    <div class="activity-log">
                        {{#if activityLog.length}}
                            {{#each activityLog}}
                            <div class="activity-item {{type}}">
                                <i class="fas {{icon}}"></i>
                                <span class="activity-msg">{{message}}</span>
                                <span class="activity-time">{{time}}</span>
                            </div>
                            {{/each}}
                        {{else}}
                            <div class="empty-state small">
                                <p>No recent activity</p>
                            </div>
                        {{/if}}
                    </div>

                    <div class="form-actions">
                        <button type="button" data-action="refresh" class="btn"><i class="fas fa-sync"></i> Refresh</button>
                        <button type="button" data-action="clear-activity" class="btn danger">Clear Log</button>
                    </div>
                </div>
            </div>
        </section>

        {{!-- SETTINGS TAB --}}
        <section class="tab-panel" data-tab="settings" data-group="hub-tabs">
            <div class="panel-split">
                <div class="panel-image">
                    <img src="modules/rnk-patrol/assets/pics/rachel.jpg" alt="Settings">
                    <div class="image-overlay">
                        <h2>Module Settings</h2>
                        <p>Global configuration options</p>
                    </div>
                </div>
                <div class="panel-content">
                    <div class="settings-form">
                        <h4>MidiQOL Integration</h4>
                        <div class="form-group">
                            <label>Logging Level</label>
                            <select name="midiQolLoggingLevel">
                                <option value="none" {{#if (eq midiQolLoggingLevel "none")}}selected{{/if}}>None</option>
                                <option value="minimal" {{#if (eq midiQolLoggingLevel "minimal")}}selected{{/if}}>Minimal</option>
                                <option value="verbose" {{#if (eq midiQolLoggingLevel "verbose")}}selected{{/if}}>Verbose</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label><input type="checkbox" name="autoResolveAffectsPlayers" {{#if autoResolveAffectsPlayers}}checked{{/if}}> Auto-Resolve Can Affect Players</label>
                            <small class="hint">Warning: Use with caution</small>
                        </div>

                        <h4>Import / Export</h4>
                        <div class="form-actions row">
                            <button type="button" data-action="export-patrols" class="btn"><i class="fas fa-download"></i> Export Patrols</button>
                            <button type="button" data-action="import-patrols" class="btn"><i class="fas fa-upload"></i> Import Patrols</button>
                        </div>

                        <h4>Diagnostics</h4>
                        <div class="adapters-info">
                            <p><strong>System:</strong> {{scene.name}}</p>
                            <p><strong>Adapters:</strong></p>
                            {{#each adapters}}
                            <div class="adapter-item">
                                <span>{{systemId}}</span> - {{name}}
                            </div>
                            {{/each}}
                        </div>

                        <h4>Debug Tests</h4>
                        <div class="tests-grid">
                            {{#each tests}}
                            <button type="button" data-action="run-test" data-test="{{id}}" class="btn test-btn" title="{{desc}}">
                                {{name}}
                            </button>
                            {{/each}}
                        </div>

                        <div class="form-actions">
                            <button type="button" data-action="save-settings" class="btn primary">Save All Settings</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
</div>
